@model IEnumerable<Bookmarks_MVC.Models.Bookmark>

@{
    ViewBag.Title = "Index";
}

<h2>Bookmarks</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
           <a href="@Html.DisplayFor(modelItem => item.Address)">@Html.DisplayFor(modelItem => item.Address)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>

            @Html.DisplayTextFor(modelItem => item.IsPublic)
        </td>
        <td>

            @{
                if(item.Tags!=null)
                {
                    if (item.Tags.Contains(','))
                    {
                        string[] tagsarr = item.Tags.Split(',');
                        foreach (var str in tagsarr)
                        {
                           @: <a href="@Url.Action("Index", "Bookmarks", new { id = str})">@str</a>,
                        }
                    }
                }
            }
        </td>
        <td>
            <a href="@Url.Action("Edit", "Bookmarks", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>     |
            <a href="@Url.Action("Delete", "Bookmarks", new { id = item.ID })"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
        </td>
    </tr>
}

</table>
